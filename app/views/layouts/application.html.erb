<!DOCTYPE html>
<html>
  <head>
    <title>RailsMicroBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav>
    <% if logged_in? %>
      <div>Howdy!<%= current_user.username %></div>
      <div><a href="/users/<%=current_user.id%>">Profile</a></div>
      <div><%= link_to 'Logout', logout_path, {method: 'post'} %></div>
    <%else%> 
       <div><a href='/login'>Login</a></div>   
    <% end %>

    <ul>
        <li><a href="/users/new">SignUp</a></li>
        <li><a href="/users">User List</a></li>
        <li><a href="/posts">Post List</a></li>
      </ul>  
    </nav>
  	<%= flash[:message] if flash[:message] %>
    <%= yield %>
  </body>
</html>
